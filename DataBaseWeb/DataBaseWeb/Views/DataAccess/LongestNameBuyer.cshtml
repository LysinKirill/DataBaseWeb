@model DataBaseWeb.Models.GoodsViewModel

@{
    ViewBag.Title = "Longest name buyer goods";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<div class="text-center">
    <h3 class="display-4">The list of goods of the buyer with the longest name</h3>
    
    <table class="table" style="position: sticky; margin-top: 2%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>ShopId</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Goods)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopId)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>




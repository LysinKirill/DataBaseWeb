@model DataBaseWeb.Models.SalesViewModel

@{
    ViewBag.Title = "Other city sales";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<div class="text-center">
    <h3 class="display-4" style="font-size: 25pt">The list of sales made by customers living outside the city where the store is located</h3>
    
    <table class="table" style="position: sticky; margin-top: 2%">
        <thead>
        <tr>
            <th>Id</th>
            <th>BuyerId</th>
            <th>ShopId</th>
            <th>GoodId</th>
            <th>GoodCount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Sales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoodId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoodCount)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
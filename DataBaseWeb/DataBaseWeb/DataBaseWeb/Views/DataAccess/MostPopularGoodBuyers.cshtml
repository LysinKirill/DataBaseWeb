@model DataBaseWeb.Models.BuyersViewModel

@{
    ViewBag.Title = "Most popular good buyers";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<div class="text-center">
    <h3 class="display-4" style="font-size: 30pt">The list of people who have purchased the most popular product</h3>
    
    <table class="table" style="position: sticky; margin-top: 2%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>City</th>
            <th>Country</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Buyers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>